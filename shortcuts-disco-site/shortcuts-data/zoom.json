{
  "$schema": "schema/shortcut.schema.json",
  "bundleId": "us.zoom.xos",
  "name": "Zoom",
  "slug": "zoom",
  "keymaps": [
    {
      "title": "Default",
      "sections": [
        {
          "title": "Meetings",
          "shortcuts": [
            {
              "title": "Join meeting",
              "key": "cmd+j"
            },
            {
              "title": "Start meeting",
              "key": "ctrl+cmd+v"
            },
            {
              "title": "Schedule meeting",
              "key": "cmd+d"
            },
            {
              "title": "Direct Share (screen share via direct share)",
              "key": "ctrl+cmd+s"
            }
          ]
        },
        {
          "title": "Meeting controls",
          "shortcuts": [
            {
              "title": "Mute/Unmute audio",
              "key": "shift+cmd+a"
            },
            {
              "title": "Start/Stop video",
              "key": "shift+cmd+v"
            },
            {
              "title": "Switch camera",
              "key": "shift+cmd+n"
            },
            {
              "title": "Start/Stop screen share",
              "key": "shift+cmd+s"
            },
            {
              "title": "Pause/Resume share",
              "key": "shift+cmd+t"
            },
            {
              "title": "Raise/Lower hand",
              "key": "opt+y"
            },
            {
              "title": "Show/Hide meeting controls (floating)",
              "key": "ctrl+opt+cmd+h"
            }
          ]
        },
        {
          "title": "Recording",
          "shortcuts": [
            {
              "title": "Start/Stop local recording",
              "key": "shift+cmd+r"
            },
            {
              "title": "Start/Stop cloud recording",
              "key": "shift+cmd+c"
            },
            {
              "title": "Pause/Resume recording",
              "key": "shift+cmd+p"
            }
          ]
        },
        {
          "title": "Views & navigation",
          "shortcuts": [
            {
              "title": "Switch Speaker/Multi-speaker/Gallery view",
              "key": "shift+cmd+w"
            },
            {
              "title": "Previous gallery page (25 participants)",
              "key": "ctrl+p"
            },
            {
              "title": "Next gallery page (25 participants)",
              "key": "ctrl+n"
            },
            {
              "title": "Enter/Exit full screen",
              "key": "shift+cmd+f"
            },
            {
              "title": "Minimal window",
              "key": "shift+cmd+m"
            },
            {
              "title": "Enable/Disable dual monitor mode",
              "key": "shift+cmd+d"
            }
          ]
        },
        {
          "title": "Participants & chat",
          "shortcuts": [
            {
              "title": "Show/Hide participants panel",
              "key": "cmd+u"
            },
            {
              "title": "Show/Hide in-meeting chat panel",
              "key": "shift+cmd+h"
            },
            {
              "title": "Open Invite window",
              "key": "cmd+i"
            },
            {
              "title": "Copy invite link",
              "key": "shift+cmd+i"
            }
          ]
        },
        {
          "title": "General",
          "shortcuts": [
            {
              "title": "Close current window",
              "key": "cmd+w"
            }
          ]
        }
      ]
    }
  ]
}
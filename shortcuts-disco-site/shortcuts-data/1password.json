{
  "$schema": "schema/shortcut.schema.json",
  "name": "1Password",
  "slug": "1password",
  "bundleId": "com.1password.1password",
  "source": "https://support.1password.com/keyboard-shortcuts/",
  "keymaps": [
    {
      "title": "Default",
      "sections": [
        {
          "title": "1Password app",
          "shortcuts": [
            {
              "title": "View keyboard shortcuts",
              "key": "cmd+/"
            },
            {
              "title": "Open settings",
              "key": "cmd+,"
            },
            {
              "title": "Search for items",
              "key": "cmd+f"
            },
            {
              "title": "Find items in the current list",
              "key": "opt+cmd+f"
            },
            {
              "title": "Clear the search field",
              "key": "esc"
            },
            {
              "title": "Switch to All Accounts",
              "key": "cmd+1"
            },
            {
              "title": "Switch accounts and collections",
              "key": "cmd+2",
              "comment": "Accounts from 2 to 9"
            },
            {
              "title": "Go back",
              "key": "cmd+["
            },
            {
              "title": "Go forward",
              "key": "cmd+]"
            },
            {
              "title": "Focus next row",
              "key": "down"
            },
            {
              "title": "Focus previous row",
              "key": "up"
            },
            {
              "title": "Focus right section",
              "key": "right"
            },
            {
              "title": "Focus left section",
              "key": "left"
            },
            {
              "title": "Activate focused element",
              "key": "enter"
            },
            {
              "title": "Activate focused element",
              "key": "space"
            },
            {
              "title": "Copy the username or primary field of the item",
              "key": "cmd+c"
            },
            {
              "title": "Copy the password of the selected item",
              "key": "shift+cmd+c"
            },
            {
              "title": "Copy the one-time password of the selected item",
              "key": "opt+cmd+c"
            },
            {
              "title": "Open the website for the login in your browser",
              "key": "shift+cmd+f"
            },
            {
              "title": "Open the selected item in a new window",
              "key": "cmd+o"
            },
            {
              "title": "Create a new item",
              "key": "cmd+n"
            },
            {
              "title": "Edit the selected item",
              "key": "cmd+e"
            },
            {
              "title": "Save changes to an item",
              "key": "cmd+s"
            },
            {
              "title": "Cancel an edit",
              "key": "esc"
            },
            {
              "title": "Reveal or conceal secure fields in the item",
              "key": "cmd+r"
            },
            {
              "title": "Temporarily reveal all secure fields in the item",
              "comment": "Hold Option key"
            },
            {
              "title": "Move the selected item(s) to the Archive",
              "key": "backspace"
            },
            {
              "title": "Delete the selected item(s)",
              "key": "cmd+backspace"
            },
            {
              "title": "Collapse or expand the sidebar",
              "key": "shift+cmd+d"
            },
            {
              "title": "Zoom in",
              "key": "cmd+plus"
            },
            {
              "title": "Zoom out",
              "key": "cmd+-"
            },
            {
              "title": "Revert to actual size",
              "key": "cmd+0"
            },
            {
              "title": "Minimize the app to the Dock",
              "key": "cmd+m"
            },
            {
              "title": "Close the current window",
              "key": "cmd+w"
            }
          ]
        },
        {
          "title": "Quick Access",
          "shortcuts": [
            {
              "title": "Open or close Quick Access",
              "key": "shift+cmd+space"
            },
            {
              "title": "Clear the search field",
              "key": "esc"
            },
            {
              "title": "Switch accounts or collections",
              "key": "cmd+1 cmd+9"
            },
            {
              "title": "View all available actions",
              "key": "right"
            },
            {
              "title": "Copy username or primary field",
              "key": "cmd+c"
            },
            {
              "title": "Copy password",
              "key": "shift+cmd+c"
            },
            {
              "title": "Copy one-time password",
              "key": "opt+cmd+c"
            },
            {
              "title": "Open item details in new window",
              "key": "cmd+o"
            },
            {
              "title": "Open the website for the login in your browser",
              "key": "opt+enter"
            },
            {
              "title": "Fill the item in the currently focused app",
              "key": "shift+enter"
            },
            {
              "title": "Open the item in the app",
              "key": "shift+cmd+o"
            },
            {
              "title": "Lock 1Password",
              "key": "shift+cmd+l"
            },
            {
              "title": "Autofill",
              "key": "cmd+\\"
            }
          ]
        }
      ]
    }
  ]
}
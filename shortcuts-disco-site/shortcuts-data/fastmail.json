{
  "$schema": "schema/shortcut.schema.json",
  "name": "FastMail",
  "slug": "fastmail",
  "keymaps": [
    {
      "title": "Default",
      "sections": [
        {
          "title": "Global Navigation",
          "shortcuts": [
            {
              "title": "Go to your mail",
              "key": "shift+g m"
            },
            {
              "title": "Go to your contacts",
              "key": "shift+g a"
            },
            {
              "title": "Go to your calendar",
              "key": "shift+g"
            },
            {
              "title": "Go to your notes",
              "key": "shift+g n"
            },
            {
              "title": "Go to your file storage",
              "key": "shift+g f"
            },
            {
              "title": "Open the settings for your account",
              "key": "shift+g s"
            },
            {
              "title": "Open the Fastmail help",
              "key": "shift+g /"
            },
            {
              "title": "Log out of your account",
              "key": "shift+g l"
            }
          ]
        },
        {
          "title": "Mail Actions",
          "shortcuts": [
            {
              "title": "Compose new message",
              "key": "c"
            },
            {
              "title": "Go to folder",
              "key": "g"
            },
            {
              "title": "Page down",
              "key": "space"
            },
            {
              "title": "Page up",
              "key": "shift+space"
            },
            {
              "title": "Search messages",
              "key": "/"
            },
            {
              "title": "Cancel",
              "key": "esc esc"
            },
            {
              "title": "Toggle sidebar",
              "key": "shift+cmd+i"
            }
          ]
        }
      ]
    }
  ]
}
            {
              "title": "Center Selection",
              "key": "cmd+3"
            },
            {
              "title": "Actual Size",
              "key": "cmd+0"
            }
          ]
        },
        {
          "title": "Selection",
          "shortcuts": [
            {
              "title": "Select Parent",
              "key": "esc"
            },
            {
              "title": "Select Child",

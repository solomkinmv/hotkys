          "title": "Navigation",
          "shortcuts": [
            {
              "title": "Move focus to the next element",
              "key": "tab"
            },
            {
              "title": "Move focus to the previous element",
              "key": "shift+tab"
            },
            {
              "title": "Take action or \"click\" on buttons",
              "key": "space"
            },
            {
              "title": "Take action or \"click\" on links",
              "key": "enter"
            },
            {
              "title": "Close windows, menus, or the message input box",
              "key": "esc"
            },
            {
              "title": "(This can be toggled in your Preferences.)",
              "key": "pageup"
            },
            {
              "title": "(This can be toggled in your Preferences.)",
              "key": "pagedown"
            },
            {
              "title": "Quick Switcher",

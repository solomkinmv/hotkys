{
  "$schema": "schema/shortcut.schema.json",
  "bundleId": "notion.id",
  "name": "Notion",
  "slug": "notion",
  "source": "https://www.notion.com/help/keyboard-shortcuts",
  "icon": "icons/notion.png",
  "keymaps": [
    {
      "title": "Default",
      "platforms": [
        "macos"
      ],
      "sections": [
        {
          "title": "Most popular",
          "shortcuts": [
            {
              "title": "Create a new page (desktop only)",
              "key": "cmd+n"
            },
            {
              "title": "Open a new Notion window",
              "key": "shift+cmd+n"
            },
            {
              "title": "Open search",
              "key": "cmd+p"
            },
            {
              "title": "Switch dark mode / light mode",
              "key": "shift+cmd+l"
            }
          ]
        },
        {
          "title": "Markdown",
          "shortcuts": [
            {
              "title": "Bullet list",
              "key": "plus"
            }
          ]
        },
        {
          "title": "Create and style your content",
          "shortcuts": [
            {
              "title": "Insert a line of text",
              "key": "enter"
            },
            {
              "title": "Create a line break within a block of text",
              "key": "shift+enter"
            },
            {
              "title": "Create a comment",
              "key": "shift+cmd+m"
            },
            {
              "title": "Bold (when text selected)",
              "key": "cmd+b"
            },
            {
              "title": "Italicize (when text selected)",
              "key": "cmd+i"
            },
            {
              "title": "Underline (when text selected)",
              "key": "cmd+u"
            },
            {
              "title": "Strikethrough (when text selected)",
              "key": "shift+cmd+s"
            },
            {
              "title": "Add a link (when text selected)",
              "key": "cmd+k"
            },
            {
              "title": "Paste over a link (when text selected)",
              "key": "cmd+v"
            },
            {
              "title": "Inline code (when text selected)",
              "key": "cmd+e"
            },
            {
              "title": "Indent / nest content",
              "key": "tab"
            },
            {
              "title": "Un-indent / Un-nest content",
              "key": "shift+tab"
            }
          ]
        },
        {
          "title": "Edit and move blocks",
          "shortcuts": [
            {
              "title": "Select block you’re currently in",
              "key": "esc"
            },
            {
              "title": "Select the block your cursor is in",
              "key": "cmd+a"
            },
            {
              "title": "Open selected image fullscreen",
              "key": "space"
            },
            {
              "title": "Delete selected blocks",
              "key": "backspace"
            },
            {
              "title": "Duplicate the block(s) you’ve selected",
              "key": "cmd+d"
            },
            {
              "title": "Edit any text inside a selected block",
              "key": "enter"
            },
            {
              "title": "Open a page inside a page",
              "key": "enter"
            },
            {
              "title": "Expand or close all toggles in a toggle list",
              "key": "opt+cmd+t"
            },
            {
              "title": "Apply the last color or highlight color you used",
              "key": "shift+cmd+h"
            },
            {
              "title": "Modify the current block you’re in",
              "key": "cmd+enter"
            },
            {
              "title": "Dismiss @-menu",
              "key": "esc"
            },
            {
              "title": "Move page to",
              "key": "shift+cmd+p"
            }
          ]
        },
        {
          "title": "/Slash commands",
          "shortcuts": [
            {
              "title": "Clears the / menu when writing a /",
              "key": "esc"
            }
          ]
        }
      ]
    },

              "key": "backspace"
            },
            {
              "title": "Pin message",
              "key": "p"
            },
            {
              "title": "Add reaction",
              "key": "plus"
            },
            {
              "title": "Reply",
              "key": "r"
            },
            {
              "title": "Mark unread",
              "key": "opt+enter"
            },
            {
              "title": "Copy text",
              "key": "cmd+c"
            },
            {
              "title": "Focus text area",
              "key": "esc"
            }
          ]
        },
        {
          "title": "Navigation",

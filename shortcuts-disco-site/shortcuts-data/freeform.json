{
  "$schema": "schema/shortcut.schema.json",
  "bundleId": "com.apple.freeform",
  "name": "Freeform",
  "slug": "freeform",
  "keymaps": [
    {
      "title": "Default",
      "sections": [
        {
          "title": "File",
          "shortcuts": [
            {
              "title": "New board",
              "key": "cmd+n"
            },
            {
              "title": "New tab",
              "key": "cmd+t"
            },
            {
              "title": "New window",
              "key": "shift+cmd+n"
            },
            {
              "title": "Close",
              "key": "cmd+w"
            }
          ]
        },
        {
          "title": "View",
          "shortcuts": [
            {
              "title": "Toggle sidebar",
              "key": "ctrl+cmd+s"
            },
            {
              "title": "Zoom in",
              "key": "cmd++"
            },
            {
              "title": "Zoom out",
              "key": "cmd+-"
            },
            {
              "title": "Actual size",
              "key": "cmd+0"
            },
            {
              "title": "Zoom to selection",
              "key": "shift+cmd+0"
            },
            {
              "title": "Zoom to fit content",
              "key": "shift+opt+cmd+o"
            }
          ]
        }
      ]
    }
  ]
}

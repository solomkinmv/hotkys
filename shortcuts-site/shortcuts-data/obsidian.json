{
  "$schema": "schema/shortcut.schema.json",
  "name": "Obsidian",
  "bundleId": "md.obsidian",
  "slug": "obsidian",
  "keymaps": [
    {
      "title": "Default",
      "sections": [
        {
          "title": "Note",
          "shortcuts": [
            {
              "title": "Create new note",
              "key": "cmd+n"
            },
            {
              "title": "Create note to the right",
              "key": "shift+cmd+n"
            },
            {
              "title": "Add file property",
              "key": "cmd+;"
            },
            {
              "title": "Delete paragraph",
              "key": "cmd+d"
            },
            {
              "title": "Insert Markdown link",
              "key": "cmd+k"
            },
            {
              "title": "Toggle bold",
              "key": "cmd+b"
            },
            {
              "title": "Toggle checkbox status",
              "key": "cmd+l"
            },
            {
              "title": "Toggle comment",
              "key": "cmd+/"
            },
            {
              "title": "Toggle italics",
              "key": "cmd+i"
            },
            {
              "title": "Toggle reading view",
              "key": "cmd+e"
            }
          ]
        },
        {
          "title": "Navigation",
          "shortcuts": [
            {
              "title": "Open quickly",
              "key": "cmd+o"
            },
            {
              "title": "Go to next tab",
              "key": "shift+cmd+]"
            },
            {
              "title": "Go to previous tab",
              "key": "shift+cmd+["
            },
            {
              "title": "Follow link under cursor",
              "key": "opt+enter"
            },
            {
              "title": "Navigate back",
              "key": "opt+cmd+left"
            },
            {
              "title": "Navigate forward",
              "key": "opt+cmd+right"
            },
            {
              "title": "Close current tab",
              "key": "cmd+w"
            },
            {
              "title": "Undo close tab",
              "key": "shift+cmd+t"
            },
            {
              "title": "New tab",
              "key": "cmd+t"
            },
            {
              "title": "Rename file",
              "key": "f2"
            },
            {
              "title": "Search current file",
              "key": "cmd+f"
            },
            {
              "title": "Search in all files",
              "key": "shift+cmd+f"
            }
          ]
        },
        {
          "title": "Windows",
          "shortcuts": [
            {
              "title": "Close window",
              "key": "shift+cmd+w"
            },
            {
              "title": "Open help",
              "key": "f1"
            },
            {
              "title": "Open settings",
              "key": "cmd+,"
            }
          ]
        }
      ]
    }
  ]
}
